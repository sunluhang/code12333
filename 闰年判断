#include <stdio.h>
#include <stdbool.h>

bool isLeapYear(int year) {
    return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
}

int main() {
    int year = 2024;
    
    if (isLeapYear(year)) {  // 如果返回 true
        printf("%d年是闰年\n", year);
    } else {  // 如果返回 false
        printf("%d年不是闰年\n", year);
    }
    
    return 0;
}
